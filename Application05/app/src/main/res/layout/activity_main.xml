<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll1">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text View"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit TextEdit TextEdit TextEdit TextEdit TextEdit TextEdit Text"
                android:layout_marginTop="20dp"
                android:singleLine="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data"
                android:inputType="date"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:text="example@example.com"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:text="Type your phone number"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BotÃ£o 1"
                android:layout_marginTop="20dp"
                android:id="@+id/btn1"/>
            <ImageButton
                android:layout_width="205px"
                android:layout_height="205px"
                android:adjustViewBounds="true"
                android:nestedScrollingEnabled="true"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginTop="20dp"/>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="New Toggle"
                android:id="@+id/toggle1"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Checkbox"
                android:layout_marginTop="20dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radio Button"
                android:layout_marginTop="20dp"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>